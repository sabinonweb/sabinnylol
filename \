import PropTypes from "prop-types";
import { FaUser, FaLock } from "react-icons/fa";

export default function Form(props: PropTypes.any) {
  return (
    <form>
      <label className="bg-red-600">
        <div className="flex justify-between items-center mb-10 border-2 border-red-500 w-5/12 h-10 rounded-full">
          <input
            type="text"
            name="name"
            value={props.value}
            placeholder={props.placeholder}
            onChange={props.onChange}
            className="flex ml-5"
            checked="false"
          />
          <div className="mr-5">
            {props.placeholder == "email" ? <FaUser /> : <FaLock />}
          </div>
        </div>
      </label>
    </form>
  );
}
